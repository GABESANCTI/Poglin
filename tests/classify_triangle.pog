// tests/classify_triangle.pog
// Objetivo: Classificar um triangulo a partir de 3 lados.

start {
    var a : Int = 0; // Inicialize
    var b : Int = 0; // Inicialize
    var c : Int = 0; // Inicialize

    println("Digite o lado a:");
    a = readLine();
    println("Digite o lado b:");
    b = readLine();
    println("Digite o lado c:");
    c = readLine();

    if (a <= 0 || b <= 0 || c <= 0) {
        println("Medidas invalidas: Lados devem ser positivos.");
    } else {
        if (a + b > c && a + c > b && b + c > a) {
            if (a == b && b == c) {
                println("Triangulo equilatero valido.");
            } else {
                if (a == b || a == c || b == c) {
                    println("Triangulo isosceles valido.");
                } else {
                    println("Triangulo escaleno valido.");
                }
            }
        } else {
            println("Medidas invalidas: Nao formam um triangulo.");
        }
    }
    pog;
} end